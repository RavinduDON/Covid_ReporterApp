<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="8dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

  <androidx.cardview.widget.CardView
      android:id="@+id/hosp_itemView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/txt_foreign"
          android:layout_width="105dp"
          android:layout_height="35dp"
          android:layout_gravity="center"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="14dp"
          android:layout_marginBottom="2dp"
          android:layout_toEndOf="@id/txt_local"
          android:padding="5dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/txt_local"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="@tools:sample/lorem" />

      <TextView
          android:id="@+id/txt_local"
          android:layout_width="101dp"
          android:layout_height="37dp"
          android:layout_gravity="center"
          android:layout_marginStart="10dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="10dp"
          android:layout_toEndOf="@id/txt_hospital"
          android:padding="5dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/txt_foreign"
          app:layout_constraintStart_toEndOf="@+id/txt_hospital"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.0"
          tools:text="@tools:sample/lorem" />

      <TextView
          android:id="@+id/txt_hospital"
          android:layout_width="135dp"
          android:layout_height="34dp"
          android:layout_gravity="center"
          android:layout_marginStart="12dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="14dp"
          android:padding="5dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toStartOf="@+id/txt_local"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="@tools:sample/lorem" />
    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>

</FrameLayout>